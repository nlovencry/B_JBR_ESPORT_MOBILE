<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="6dp"
        android:background="@drawable/bg_list"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:visibility="gone"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_idg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="ID Game"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_idgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="idgame"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_idg"
            android:maxLines="10"
            />

        <TextView
            android:id="@+id/tv_ngame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_idgame"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Nama Game"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ngm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ngame"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_ngame"
            android:maxLines="10"
            />



        <TextView
            android:id="@+id/tv_idk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ngm"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Keterangan"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_idket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="keterangan"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_idk"
            android:maxLines="10"
            />


    </RelativeLayout>
</RelativeLayout>